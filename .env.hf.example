# Environment variables for Hugging Face Spaces deployment
# Copy to .env for HF Spaces deployment

# Redis Configuration
# Use internal Redis or external service
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
STORAGE_PATH=/tmp/rescored

# API Configuration
API_HOST=0.0.0.0
API_PORT=7860

# Worker Configuration
GPU_ENABLED=false
MAX_VIDEO_DURATION=900

# Device Configuration (auto-detected, can override)
# Options: cuda, mps, cpu
YOURMT3_DEVICE=cpu

# CORS Configuration
# Add Vercel frontend URL and HF Spaces URL
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.vercel.app,https://yourusername-rescored.hf.space

# Optional: YouTube Authentication
# YOUTUBE_COOKIES_PATH=/app/storage/youtube_cookies.txt
